{
  "name": "senren-backend",
  "version": "0.0.1",
  "description": "Senren backend",
  "main": "./dist/src/index",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "build": "shx rm -rf dist && cross-env NODE_ENV=production npm run build-ts",
    "serve": "node ./dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "lint-fix": "prettier --write \"src/**/*.ts*\" && tslint -p tsconfig.json --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xdk78/senren-backend.git"
  },
  "author": "xdk78 <xdk78888@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdk78/senren-backend/issues"
  },
  "homepage": "https://github.com/xdk78/senren-backend#readme",
  "dependencies": {
    "base64url": "^3.0.1",
    "bcrypt": "^3.0.4",
    "consola": "^2.4.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "fastify": "^1.14.1",
    "fastify-circuit-breaker": "^0.1.0",
    "fastify-compress": "^0.8.0",
    "fastify-helmet": "^3.0.0",
    "fastify-plugin": "^1.5.0",
    "jsonwebtoken": "^8.4.0",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.10",
    "typegoose": "^5.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv-safe": "^5.0.3",
    "@types/jest": "^24.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.12",
    "@types/node": "^10.12.21",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "reflect-metadata": "^0.1.13",
    "shx": "^0.3.2",
    "supertest": "^3.4.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
