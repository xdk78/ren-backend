{
    "name": "senren-backend",
    "version": "0.0.1",
    "description": "senren-backend.",
    "main": "./dist/src/index",
    "scripts": {
        "start": "npm run serve",
        "dev": "cross-env NODE_ENV=development npm run tslint && ts-node src/index.ts",
        "build": "cross-env NODE_ENV=production npm run tslint && shx rm -rf dist && npm run build-ts",
        "serve": "node ./dist/src/index.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "test": "cross-env NODE_ENV=test jest --forceExit --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xdk78/senren-backend.git"
    },
    "author": "xdk78 <xdk78888@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xdk78/senren-backend/issues"
    },
    "homepage": "https://github.com/xdk78/senren-backend#readme",
    "dependencies": {
        "base64url": "^3.0.0",
        "bcrypt": "^3.0.0",
        "consola": "^1.4.2",
        "cors": "^2.8.4",
        "crypto": "^1.0.1",
        "fastify": "^1.9.0",
        "fastify-circuit-breaker": "^0.1.0",
        "fastify-compress": "^0.6.0",
        "fastify-helmet": "^1.0.3",
        "fastify-plugin": "^1.2.0",
        "jsonwebtoken": "^8.3.0",
        "mongodb": "^3.1.3",
        "mongoose": "^5.2.8",
        "reflect-metadata": "^0.1.12",
        "typegoose": "^5.2.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^2.0.0",
        "@types/jest": "^23.3.1",
        "@types/mongoose": "^5.2.5",
        "@types/node": "^10.7.0",
        "cross-env": "^5.2.0",
        "dotenv-safe": "^6.0.0",
        "jest": "^23.5.0",
        "shx": "^0.3.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.9.2",
        "typescript": "^3.0.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
