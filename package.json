{
  "name": "senren-backend",
  "version": "0.0.1",
  "description": "Senren backend",
  "main": "./dist/src/index",
  "scripts": {
    "start": "npm run build && npm run serve",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn src/index.ts",
    "build": "cross-env NODE_ENV=production npm run build-ts",
    "serve": "node ./dist/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint . --ext .js,.ts",
    "test": "cross-env NODE_ENV=test jest --testTimeout=100000 --runInBand --detectOpenHandles ",
    "lint-fix": "prettier --write \"src/**/*.ts*\" && eslint . --ext .js,.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xdk78/senren-backend.git"
  },
  "author": "xdk78 <xdk78888@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdk78/senren-backend/issues"
  },
  "homepage": "https://github.com/xdk78/senren-backend#readme",
  "dependencies": {
    "base64url": "^3.0.1",
    "bcrypt": "^4.0.1",
    "consola": "^2.12.1",
    "cors": "^2.8.5",
    "fastify": "^2.14.1",
    "fastify-circuit-breaker": "^0.1.0",
    "fastify-compress": "^2.0.1",
    "fastify-helmet": "^3.0.2",
    "fastify-plugin": "^1.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.14",
    "@typegoose/typegoose": "^7.1.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv-safe": "^8.1.0",
    "@types/jest": "^25.2.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "5.7.8",
    "@types/node": "^14.0.1",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "cross-env": "^7.0.2",
    "dotenv-safe": "^8.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.13.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
