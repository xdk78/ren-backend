{
    "name": "senren-backend",
    "version": "0.0.1",
    "description": "senren-backend.",
    "main": "/dist/index",
    "scripts": {
        "start": "npm run serve",
        "dev": "cross-env NODE_ENV=development npm run tslint && ts-node src/index.ts",
        "build": "npm run tslint && npm run build-ts",
        "serve": "node dist/index.js",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "test": "cross-env NODE_ENV=test jest --forceExit --verbose"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xdk78/senren-backend.git"
    },
    "author": "xdk78 <xdk78@interia.pl>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/xdk78/senren-backend/issues"
    },
    "homepage": "https://github.com/xdk78/senren-backend#readme",
    "dependencies": {
        "bcrypt": "^2.0.1",
        "fastify": "^1.7.0",
        "fastify-bearer-auth": "^3.0.1",
        "fastify-compress": "^0.6.0",
        "fastify-helmet": "^1.0.3",
        "fastify-jwt": "^0.3.0",
        "fastify-plugin": "^1.1.3",
        "mongodb": "^3.0.10",
        "mongoose": "^5.1.6",
        "reflect-metadata": "^0.1.12",
        "typegoose": "^5.2.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^2.0.0",
        "@types/jest": "^23.1.3",
        "@types/mongoose": "^5.0.18",
        "@types/node": "^10.5.1",
        "cross-env": "^5.2.0",
        "dotenv-safe": "^6.0.0",
        "jest": "^23.2.0",
        "supertest": "^3.1.0",
        "ts-jest": "^22.4.6",
        "ts-node": "^6.1.1",
        "tslint": "^5.10.0",
        "tslint-config-airbnb": "^5.9.2",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
