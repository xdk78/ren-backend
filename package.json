{
  "name": "senren-backend",
  "version": "0.0.1",
  "description": "Senren backend",
  "main": "./dist/src/index",
  "scripts": {
    "start": "npm run serve",
    "dev": "cross-env NODE_ENV=development npm run tslint && ts-node src/index.ts",
    "build": "cross-env NODE_ENV=production npm run tslint && shx rm -rf dist && npm run build-ts",
    "serve": "node ./dist/src/index.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --forceExit --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xdk78/senren-backend.git"
  },
  "author": "xdk78 <xdk78888@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdk78/senren-backend/issues"
  },
  "homepage": "https://github.com/xdk78/senren-backend#readme",
  "dependencies": {
    "base64url": "^3.0.0",
    "bcrypt": "^3.0.2",
    "consola": "^2.0.0",
    "cors": "^2.8.4",
    "crypto": "^1.0.1",
    "fastify": "^1.13.0",
    "fastify-circuit-breaker": "^0.1.0",
    "fastify-compress": "^0.7.0",
    "fastify-helmet": "^2.1.0",
    "fastify-plugin": "^1.2.1",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.8",
    "mongoose": "^5.3.8",
    "reflect-metadata": "^0.1.12",
    "typegoose": "^5.4.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^23.3.9",
    "@types/mongoose": "^5.3.0",
    "@types/node": "^10.12.2",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "jest": "^23.6.0",
    "shx": "^0.3.2",
    "supertest": "^3.3.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
